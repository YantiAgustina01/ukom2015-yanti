<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="yanti.tari_tradisional.tatra.TarianKepulauanRiau"
    android:background="#33FFFF">


    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Persembahan"
        android:textSize="18dp"
        android:id="@+id/btnpersembahan"
        android:background="#33FF33"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btngmln"
        android:layout_alignStart="@+id/btngmln" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Gamelan"
        android:textSize="18dp"
        android:id="@+id/btngmln"
        android:background="#33FF33"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/btnpersembahan"
        android:layout_alignLeft="@+id/btnJateng"
        android:layout_alignStart="@+id/btnJateng" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Tandak"
        android:textSize="18dp"
        android:id="@+id/btnJateng"
        android:background="#33FF33"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Tabal Gepita"
        android:textSize="18dp"
        android:id="@+id/btntgapita"
        android:background="#33FF33"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/btnJateng"
        android:layout_alignLeft="@+id/btnJateng"
        android:layout_alignStart="@+id/btnJateng" />

</RelativeLayout>

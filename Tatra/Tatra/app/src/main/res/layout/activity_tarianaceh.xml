<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="yanti.tari_tradisional.tatra.Tarianaceh"
    android:background="#33FFFF">


    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Seudati"
        android:textSize="18dp"
        android:id="@+id/btnsdt"
        android:background="#33FF33"
        android:layout_marginTop="145dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Saman"
        android:textSize="18dp"
        android:id="@+id/btnsmn"
        android:background="#33FF33"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/btnsdt"
        android:layout_alignLeft="@+id/btnsdt"
        android:layout_alignStart="@+id/btnsdt" />
</RelativeLayout>
